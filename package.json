{
  "name": "esteparian-website",
  "version": "1.0.0",
  "description": "Sitio web oficial de Esteparian SAS",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/main.css -o ./dist/css/main.css --watch",
    "build": "npx tailwindcss -i ./src/main.css -o ./dist/css/main.css --minify",
    "start": "php -S localhost:8000 server.php",
    "prod": "npm run build && npm run start"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.1"
  }
}